{% extends "admin/layout.twig" %}

{% block menu %}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <br><br><br>

            <h2>{{ 'Forgotten password?'|trans }}</h2>
            <br>
            <p>{{ 'Please, enter your e-mail and a new password will be generated and send to you.'|trans }}</p>
            <br>

            <form action="{{ path('admin_forgotten_password') }}" method="post" role="form">

                {% for error in app.session.getFlashBag.get('error') %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endfor %}

                <div class="form-group">
                    <label for="username">{{ 'E-mail'|trans }}</label>
                    <input type="text" class="form-control" name="username" id="username" placeholder="{{ 'E-mail'|trans }}">
                </div>
                <button type="submit" class="btn btn-default" id="login">{{ 'Send'|trans }}</button>
            </form>
        </div>
    </div>

{% endblock %}
