{% extends "admin/layout.twig" %}

{% block content %}
    <header class="page-header">
        <h1>
            {% if form.vars.value %}
                {{ form.vars.value.username }}
            {% else %}
                New user
            {% endif %}
        </h1>
    </header>

    {% for error in app.session.getFlashBag.get('error') %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endfor %}

    <form action="/admin/users/form" method="post">
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Save</button> or <a href="/admin/users">go back</a>
    </form>
{% endblock %}
