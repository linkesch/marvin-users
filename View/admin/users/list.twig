{% extends "admin/layout.twig" %}

{% block content %}
    <header class="page-header">
        <h1>Users</h1>
    </header>

    {% for message in app.session.getFlashBag.get('message') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <p><a href="/admin/users/form" class="btn btn-primary">New user</a></p>
    <p>Number of users: {{ users|length }}</p>
    <br>

    <table id="users" class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th width="15%"></th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>
                        <a href="/admin/users/form/{{ user.id }}" class="btn btn-primary">Edit</a>
                        <a href="/admin/users/delete/{{ user.id }}" class="btn btn-danger confirm">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">There are no users. <a href="/admin/users/form">Create the first one now.</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
